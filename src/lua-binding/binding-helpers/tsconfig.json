{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "types": ["node"],
    "strict": true,
    "plugins": [{ "name": "typescript-tstl-plugin" }],
    "outDir": "../../../dist/binding-helpers",
    "declaration": true,
    "declarationDir": "../../../dist/binding-helpers/@types/binding-helpers"
  },
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/vscode-typescript-to-lua/master/tsconfig-schema.json",

  "tstl": {
    "luaTarget": "5.3"
  }
}